<Window x:Class="iTunesSyncer.FileAccess.Dialog.OpenFileSystemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTunesSyncer.FileAccess.Dialog"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:myv="clr-namespace:iTunesSyncer.UI.MyViews"
        mc:Ignorable="d"
        Height="450" Width="800">


    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding FormLoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    BorderThickness="0"
                    Background="Transparent"
                    Command="{Binding MoveParentDirectoryCommand}">
                <myv:FantScalingImage Width="24" Height="24"
                       Source="/Properties/Resources/Up.png"/>
            </Button>

            <TextBox Grid.Column="1"
                     Height="22" Margin="5"
                     Text="{Binding CurrentDirectoryPath.Value , Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                
                <i:Interaction.Triggers>
                    <i:KeyTrigger Key="Enter" ActiveOnFocus="True">
                        <i:InvokeCommandAction Command="{Binding Path=UpdateCurrentDirectoryCommand}" />
                    </i:KeyTrigger>
                </i:Interaction.Triggers>
            </TextBox>

            <Button Grid.Column="2"
                    BorderThickness="0"
                    Background="Transparent"
                    Command="{Binding UpdateCurrentDirectoryCommand}">
                <myv:FantScalingImage Width="24" Height="24"
                       Source="/Properties/Resources/Update.png"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Margin="0 0 10 0"
                    BorderThickness="0"
                    Background="Transparent"
                    Command="{Binding CreateDirectoryCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="24" Height="24"
                        Source="/Properties/Resources/AddDirectory.png"/>
                    <Label
                        Content="ディレクトリを作成" />
                </StackPanel>
            </Button>

            <Button Grid.Column="1"
                    Margin="0 0 10 0"
                    BorderThickness="0"
                    Background="Transparent"
                    IsEnabled="{Binding IsEnabledSelectedItem.Value}"
                    Command="{Binding DeleteItemCommand}">
                <StackPanel Orientation="Horizontal">
                    <myv:FantScalingImage Width="24" Height="24"
                        Source="/Properties/Resources/Trash.png"/>
                    <Label
                        Background="Transparent"
                        Content="削除" />
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="2" Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ListView Grid.Column="0" Grid.Row="0"
                      ItemsSource="{Binding FileListViewItemSource}"
                      SelectedItem="{Binding FileListSelectedItem.Value}"
                      d:ItemsSource="{d:SampleData ItemCount=5}">
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding Path=ListItemSelectionChangedCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding Path=ListItemMouseDoubleClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="300">
                            <GridViewColumn.Header>
                                <Label
                                    Content="名前"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Top"/>
                            </GridViewColumn.Header>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <myv:FantScalingImage Width="16" Height="16"
                                            Source="{Binding Icon.Value}"/>
                                        <Label
                                            Content="{Binding Name.Value}"
                                            Height="Auto"
                                            HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                            Margin="0,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="100">
                            <GridViewColumn.Header>
                                <Label
                                Content="種類"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"
                                Padding="0,0,0,0"
                                VerticalAlignment="Top"/>
                            </GridViewColumn.Header>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                    Content="{Binding TypeText.Value}"
                                    Height="Auto"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Top"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="3" Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0"
                   Content="ディレクトリ名：" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1"
                     Height="22"
                     IsManipulationEnabled="False"
                     Text="{Binding FileOrDirectoryName.Value}"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Margin="0 0 5 0"
                    IsEnabled="{Binding IsEnabledSelectedItem.Value}"
                    Content="ディレクトリの選択"
                    Command="{Binding OkCommand}"/>
            <Button Grid.Column="2"
                    Content="キャンセル"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</Window>
