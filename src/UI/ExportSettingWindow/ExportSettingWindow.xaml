<Window x:Class="iTunesSyncer.UI.ExportSettingWindow.ExportSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTunesSyncer.UI.ExportSettingWindow"
        xmlns:helper="clr-namespace:iTunesSyncer.UI.Helper" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="エクスポート設定" Width="480" ResizeMode="NoResize" SizeToContent="Height">

    <Window.Resources>
        <ResourceDictionary>
            <local:EnumToBooleanConverter x:Key="EnumToBoolean" />
        </ResourceDictionary>
    </Window.Resources>


    <StackPanel
        Orientation="Vertical"
        Margin="5 5 5 5">

        <StackPanel
            Orientation="Vertical">
            
            <RadioButton
                Grid.Row="0" Grid.Column="0"
                GroupName="ExportSelect"
                Content="ローカルフォルダ"
                IsChecked="{
                    Binding Path=ExportSelected.Value,
                    Mode=TwoWay,
                    Converter={StaticResource EnumToBoolean},
                    ConverterParameter=Local}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="エクスポート先フォルダ"/>

                <TextBox
                    Grid.Row="0" Grid.Column="1"
                    Margin="5 5 5 5"
                    TextWrapping="Wrap"
                    Text="{Binding LocalExportPath.Value, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Top"/>

                <Button
                    Grid.Row="0" Grid.Column="2"
                    Margin="5 5 5 5"
                    Content="参照"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="0.53,-0.649"
                    HorizontalAlignment="Right"
                    Width="50"
                    Command="{Binding OpenLocalExportPathCommand}"/>
            </Grid>
        </StackPanel>
        <Line Stretch="Fill" Stroke="Black" X2="1" Margin="0 8 0 5"/>

        <StackPanel
            Orientation="Vertical">

            <RadioButton
                GroupName="ExportSelect"
                Content="FTP(File Transfer Protocol)"
                IsChecked="{
                    Binding Path=ExportSelected.Value,
                    Mode=TwoWay,
                    Converter={StaticResource EnumToBoolean},
                    ConverterParameter=Ftp}"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="ホスト名(アドレス)"/>
                <TextBox
                    Grid.Row="1" Grid.Column="0"
                    Text="{Binding FtpHost.Value}"/>
                
                <Label
                    Grid.Row="0" Grid.Column="2"
                    Content="ポート番号"/>
                <TextBox
                    Grid.Row="1" Grid.Column="2"
                    InputMethod.IsInputMethodEnabled="False"
                    Text="{Binding FtpPort.Value}"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="ユーザ名"/>
                <TextBox
                    Grid.Row="1" Grid.Column="0"
                    Text="{Binding FtpUserName.Value}"/>

                <Label
                    Grid.Row="0" Grid.Column="2"
                    Content="パスワード"/>
                <PasswordBox
                    Grid.Row="1" Grid.Column="2"
                    InputMethod.IsInputMethodEnabled="False"
                    helper:PasswordBoxHelper.IsAttached="True"
                    helper:PasswordBoxHelper.Password="{Binding FtpPassword.Value}"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="エクスポート先フォルダ"/>

                <TextBox
                    Grid.Row="0" Grid.Column="1"
                    Margin="5 5 5 5"
                    TextWrapping="Wrap"
                    Text="{Binding FtpExportPath.Value, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Top"/>

                <Button
                    Grid.Row="0" Grid.Column="2"
                    Margin="5 5 5 5"
                    Content="参照"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="0.53,-0.649"
                    HorizontalAlignment="Right"
                    Width="50"
                    Command="{Binding OpenFtpExportPathCommand}"/>
            </Grid>
        </StackPanel>
        <Line Stretch="Fill" Stroke="Black" X2="1" Margin="0 8 0 5"/>

        <StackPanel
            Orientation="Vertical">

            <Label
                Grid.Row="0" Grid.Column="0"
                Content="詳細設定"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="プレイリストフォーマット"/>

                <ComboBox
                    Grid.Row="0" Grid.Column="1"
                    SelectedIndex="{Binding PlaylistFormatSelectedIndex.Value}"
                    Width="160"
                    Margin="5,0,5,0">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding Path=PlaylistFormatSelectedChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <ComboBoxItem Content="M3U"/>
                    <ComboBoxItem Content="M3U8"/>
                    <ComboBoxItem Content="XSPF"/>
                </ComboBox>
            </Grid>
        </StackPanel>
        <Line Stretch="Fill" Stroke="Black" X2="1" Margin="0 8 0 5"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button
                Grid.Row="0" Grid.Column="1"
                Content="OK"
                Command="{Binding ExportSettingOkCommand}" Height="20" VerticalAlignment="Top"/>
            <Button
                Grid.Row="0" Grid.Column="3"
                Content="キャンセル"
                Command="{Binding ExportSettingCancelCommand}" Height="20" VerticalAlignment="Top"/>
        </Grid>
    </StackPanel>
</Window>
